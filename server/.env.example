# MongoDB Connection
MONGO_URI=mongodb+srv://username:password@cluster0.mongodb.net/database-name?retryWrites=true&w=majority

# JWT Authentication Configuration
# Secret key for signing JWT tokens - generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-secret-key-here

# Email Configuration (for contact form notifications)
# SMTP server hostname (e.g., smtp.gmail.com, smtp.office365.com, smtp.sendgrid.net)
EMAIL_HOST=smtp.gmail.com
# SMTP server port (587 for TLS, 465 for SSL)
EMAIL_PORT=587
# Use secure connection (true for port 465, false for port 587)
EMAIL_SECURE=false
# Email account username/address
EMAIL_USER=your-email@example.com
# Email account password or app-specific password
EMAIL_PASS=your-app-password
# Name to appear in "From" field of emails
EMAIL_FROM_NAME="Ndong World Wide"
# Email address to receive contact form notifications
CONTACT_NOTIFICATION_EMAIL=admin@example.com
